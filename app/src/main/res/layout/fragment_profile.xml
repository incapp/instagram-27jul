<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView_posts_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_profile"
        android:gravity="center"
        android:text="Posts"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_posts_label"
        android:layout_toRightOf="@id/imageView_profile"
        android:gravity="center"
        android:text="20"
        android:textColor="#000000"
        android:textSize="22sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_logout"
        android:layout_below="@id/imageView_profile"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drawable_button"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>